<% include ../partials/header %>

<div class="row">
  <div class="col-md-4 col-sm-4">
    <h2>
      <% if(user.firstName && user.lastName) { %>
        <%= user.firstName + " " + user.lastName %>
      <% } else { %>
        <%= user.username %>
      <% } %>
    </h2>
    
    <div class="thumbnail">
      <img class="img-rounded" src="<%= user.avatar %>" alt="user profile image">
      <div class="captaion"><%= user.email %></div>
    </div>
    <!--space for text here-->
  </div>
  
  <div class="col-m-8 col-sm-8">
    <h2><%= user.username %>'s Campgrounds</h2>
      <% campgrounds.forEach(function(campground) { %>
        <div class="thumbnail">
          <img src="<%= campground.image %>">
          <div class="caption">
            <a href="/campgrounds/<%= campground.id %>"><%= campground.name %></a>
          </div>
        </div>
     <% }) %>
  </div>

</div>

<% include ../partials/footer %>