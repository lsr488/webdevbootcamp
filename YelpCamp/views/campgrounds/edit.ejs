<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center; ">Edit <%= campground.name %></h1>
    <div style="width: 40%; margin: 25px auto;">
      <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>" name="name">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="campground[image]" value="<%= campground.image %>" name="image">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="campground[description]" value="<%= campground.description %>" name="description">
        </div>
        <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>
      
      <a href="/campgrounds">Back to All Campgrounds</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>